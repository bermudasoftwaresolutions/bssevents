<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <main>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Main</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.bssEvents.main.output>
                        <TCEforms>
                            <label>Default calendar view (list / cal)</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">List (Month)</numIndex>
                                        <numIndex index="1">list</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">List (Year)</numIndex>
                                        <numIndex index="1">yearlist</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Calendar</numIndex>
                                        <numIndex index="1">cal</numIndex>
                                    </numIndex>
                                </items>
                                <size>1</size>
                                <minitems>1</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.bssEvents.main.output>

                    <settings.bssEvents.main.paging>
                        <TCEforms>
                            <label>Max events per list view</label>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <eval>trim,int</eval>
                                <range>
                                    <lower>1</lower>
                                    <upper>100</upper>
                                </range>
                                <default>10</default>
                                <slider>
                                    <step>1</step>
                                    <width>200</width>
                                </slider>
                            </config>
                        </TCEforms>
                    </settings.bssEvents.main.paging>
                    <settings.bssEvents.main.access_to_details>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Access to details</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.bssEvents.main.access_to_details>
                    <settings.bssEvents.main.image_upload>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Images upload</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.bssEvents.main.image_upload>
                    <settings.bssEvents.main.file_upload>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Files upload</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.bssEvents.main.file_upload>
                    <settings.bssEvents.main.update_user_data>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Update user data</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.bssEvents.main.update_user_data>
                    <settings.bssEvents.main.email_subject>
                        <TCEforms>
                            <label>Update user data - Email subject</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.bssEvents.main.email_subject>
                    <settings.bssEvents.main.email>
                        <TCEforms>
                            <label>Update user data - Email address</label>
                            <config>
                                <type>input</type>
                                <eval>email</eval>
                            </config>
                        </TCEforms>
                    </settings.bssEvents.main.email>
                </el>
            </ROOT>
        </main>
    </sheets>
</T3DataStructure>
